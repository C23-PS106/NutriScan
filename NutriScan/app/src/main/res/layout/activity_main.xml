<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/cl1"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/lato_bold"
            android:text="Quick Access" />

<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/recyclerView"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="4dp"-->
<!--            android:layout_below="@id/textView6" />-->
        <HorizontalScrollView
            android:id="@+id/scrollmenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView6">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/btnAyam"
                    android:layout_width="90dp"
                    android:layout_height="56dp"
                    android:layout_marginVertical="3dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/ayamGoreng"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/round_button"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ayam_goreng"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:id="@+id/textAyam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ayam Goreng"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/ayamGoreng" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btnBubur"
                    android:layout_width="90dp"
                    android:layout_height="56dp"
                    android:layout_marginVertical="3dp"
                    android:layout_marginLeft="114dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/buburAyam"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/round_button"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/bubur"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:id="@+id/textBubur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bubur Ayam"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/buburAyam" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btnEskrim"
                    android:layout_width="90dp"
                    android:layout_height="56dp"
                    android:layout_marginVertical="3dp"
                    android:layout_marginLeft="216dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/esKrim"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/round_button"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/es_krim"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:id="@+id/textEskrim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Es Krim"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/esKrim" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/btnGado"
                    android:layout_width="90dp"
                    android:layout_height="56dp"
                    android:layout_marginVertical="3dp"
                    android:layout_marginLeft="318dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/gado"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/round_button"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/gado_gado"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:id="@+id/textGado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gado-Gado"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/gado" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/btnKue"
                    android:layout_width="90dp"
                    android:layout_height="56dp"
                    android:layout_marginVertical="3dp"
                    android:layout_marginLeft="420dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/kue"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/round_button"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/kue_coklat"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:id="@+id/textKue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kue Coklat"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/kue" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/btnKentang"
                    android:layout_width="90dp"
                    android:layout_height="56dp"
                    android:layout_marginVertical="3dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_below="@id/btnAyam"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/kentang"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/round_button"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/kentang_goreng"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:id="@+id/textKentang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kentang Goreng"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/kentang" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/btnNasi"
                    android:layout_width="90dp"
                    android:layout_height="56dp"
                    android:layout_marginVertical="3dp"
                    android:layout_marginLeft="114dp"
                    android:layout_marginRight="12dp"
                    android:layout_below="@id/btnAyam"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/nasi"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/round_button"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/nasi_goreng"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:id="@+id/textNasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nasi Goreng"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/nasi" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/btnOmellette"
                    android:layout_width="90dp"
                    android:layout_height="56dp"
                    android:layout_marginVertical="3dp"
                    android:layout_marginLeft="216dp"
                    android:layout_marginRight="12dp"
                    android:layout_below="@id/btnAyam"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/omellette"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/round_button"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/omellette"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:id="@+id/textOmellette"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Omellette"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/omellette" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/btnRendang"
                    android:layout_width="90dp"
                    android:layout_height="56dp"
                    android:layout_marginVertical="3dp"
                    android:layout_marginLeft="316dp"
                    android:layout_marginRight="12dp"
                    android:layout_below="@id/btnAyam"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/rendang"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/round_button"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/rendang"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:id="@+id/textRendang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rendang"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/rendang" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/btnSandwich"
                    android:layout_width="90dp"
                    android:layout_height="56dp"
                    android:layout_marginVertical="3dp"
                    android:layout_marginLeft="418dp"
                    android:layout_marginRight="12dp"
                    android:layout_below="@id/btnAyam"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/sandwich"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/round_button"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/sandwich"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:id="@+id/textSandwich"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sandwich"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/sandwich" />
                </RelativeLayout>
            </RelativeLayout>

        </HorizontalScrollView>

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl1">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/lato_bold"
            android:text="Article"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="0dp"
            android:background="@color/orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.Material3.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:src="@drawable/logo_app" />

            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:src="@drawable/baseline_account_circle_24_white" />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/open_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/orange"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout2"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/outline_camera_24"
        app:tint="@color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/open_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/light_orange"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/open_scan"
        app:layout_constraintEnd_toEndOf="@+id/open_scan"
        app:srcCompat="@drawable/baseline_photo_camera_24"
        app:tint="@color/orange" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/open_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/light_orange"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/open_camera"
        app:layout_constraintEnd_toEndOf="@+id/open_camera"
        app:srcCompat="@drawable/baseline_insert_photo_24"
        app:tint="@color/orange" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout2" />

</androidx.constraintlayout.widget.ConstraintLayout>