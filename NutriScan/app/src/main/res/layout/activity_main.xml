<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl1"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/lato_bold"
            android:text="Quick Access"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


<!--        -->

        <ImageButton
            android:id="@+id/ayamGoreng"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:srcCompat="@drawable/ayam_goreng"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/meal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:text="Ayam Goreng"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ayamGoreng" />

        <ImageButton
            android:id="@+id/buburAyam"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_button"
            app:layout_constraintStart_toEndOf="@+id/ayamGoreng"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:srcCompat="@drawable/bubur"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/meal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:text="Bubur Ayam"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/meal1"
            app:layout_constraintTop_toBottomOf="@+id/ayamGoreng" />

        <ImageButton
            android:id="@+id/esKrim"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_button"
            app:layout_constraintStart_toEndOf="@+id/buburAyam"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:srcCompat="@drawable/es_krim"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/meal3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="6dp"
            android:text="Es Krim"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/meal2"
            app:layout_constraintTop_toBottomOf="@+id/ayamGoreng" />

        <ImageButton
            android:id="@+id/gadoGado"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_button"
            app:layout_constraintStart_toEndOf="@+id/esKrim"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:srcCompat="@drawable/gado_gado"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/meal4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="6dp"
            android:text="Gado-Gado"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/meal3"
            app:layout_constraintTop_toBottomOf="@+id/ayamGoreng" />

        <ImageButton
            android:id="@+id/nasiGoreng"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/round_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/gadoGado"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:srcCompat="@drawable/nasi_goreng"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/meal7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="6dp"
            android:text="Nasi Goreng"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/meal4"
            app:layout_constraintTop_toBottomOf="@+id/nasiGoreng" />

        <ImageButton
            android:id="@+id/sandwich"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/round_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rendang"
            app:layout_constraintTop_toBottomOf="@+id/nasiGoreng"
            app:srcCompat="@drawable/sandwich"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/meal6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="6dp"
            android:text="Kue Coklat"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kueCoklat" />

        <ImageButton
            android:id="@+id/kueCoklat"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/round_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ayamGoreng"
            app:srcCompat="@drawable/kue_coklat"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/meal5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="6dp"
            android:text="Kentang Goreng"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/meal8"
            app:layout_constraintTop_toBottomOf="@+id/kentangGoreng" />

        <ImageButton
            android:id="@+id/omellette"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/round_button"
            app:layout_constraintStart_toEndOf="@+id/kueCoklat"
            app:layout_constraintTop_toBottomOf="@+id/ayamGoreng"
            app:srcCompat="@drawable/omellette"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/meal8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="6dp"
            android:text="Omellette"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/meal6"
            app:layout_constraintTop_toBottomOf="@+id/kueCoklat" />

        <ImageButton
            android:id="@+id/kentangGoreng"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/round_button"
            app:layout_constraintStart_toEndOf="@+id/omellette"
            app:layout_constraintTop_toBottomOf="@+id/ayamGoreng"
            app:srcCompat="@drawable/kentang_goreng"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/meal9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:text="Rendang"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/meal5"
            app:layout_constraintTop_toBottomOf="@+id/kueCoklat" />

        <ImageButton
            android:id="@+id/rendang"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/round_button"
            app:layout_constraintStart_toEndOf="@+id/kentangGoreng"
            app:layout_constraintTop_toBottomOf="@+id/ayamGoreng"
            app:srcCompat="@drawable/rendang"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/meal10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="31dp"
            android:layout_marginTop="6dp"
            android:text="Sandwich"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/meal9"
            app:layout_constraintTop_toBottomOf="@+id/kueCoklat" />


<!--        -->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl1">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/lato_bold"
            android:text="Quick Access"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="0dp"
            android:background="@color/orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.Material3.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:src="@drawable/logo_app" />

            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:src="@drawable/baseline_account_circle_24_white" />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/open_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/orange"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout2"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/outline_camera_24"
        app:tint="@color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/open_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/light_orange"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/open_scan"
        app:layout_constraintEnd_toEndOf="@+id/open_scan"
        app:srcCompat="@drawable/baseline_photo_camera_24"
        app:tint="@color/orange" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/open_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/light_orange"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/open_camera"
        app:layout_constraintEnd_toEndOf="@+id/open_camera"
        app:srcCompat="@drawable/baseline_insert_photo_24"
        app:tint="@color/orange" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout2" />

</androidx.constraintlayout.widget.ConstraintLayout>